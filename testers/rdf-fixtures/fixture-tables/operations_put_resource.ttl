                test:response_assertion :updated_ok_res
            ]
            [
                test:request :put_ttl_resource_to_existing_no_im_req ;
                test:response_assertion :updated_ok_res
            ]
            [
                test:request :get_ttl_resource_to_existing_no_im_req ;
