:create_deep_ttl_resources a test:AutomatedTest ;
    test:purpose "Create: PUT Turtle resources to into a deep hierarchy."@en ;
    rdfs:isDefinedBy <https://github.com/solid/specification/issues/40>,
    <https://github.com/solid/specification/issues/68> ;
    test:test_script <http://example.org/httplist#http_req_res_list> ;
    test:params [
        <http://example.org/httplist/param#bearer> <https://idp.test.solidproject.org/tokens/ALICE_ID_GOOD> ;
        test:steps (
            [
                test:request :put_ttl_resource_deep_bc_im_req ;
                test:response_assertion :conflict_res
            ]
            [
                test:request :get_ttl_resource_deep_bc_im_req ;
                test:response_assertion :not_found_res
            ]
            [
                test:request :get_ttl_resource_deep_con_im_req ;
                test:response_assertion :not_found_res
            ]
            [
                test:request :put_ttl_resource_deep_rs_im_req ;
                test:response_assertion :created_ok_res
            ]
            [
                test:request :get_ttl_resource_deep_rs_im_req ;
                test:response_assertion :ok_res
            ]
            [
                test:request :get_ttl_resource_deep_con_im_req ;
                test:response_assertion :ok_res
            ]
            [
                test:request :put_ttl_resource_deep_no_im_req ;
                test:response_assertion :created_ok_res
            ]
            [
                test:request :get_ttl_resource_deep_no_im_req ;
                test:response_assertion :ok_res
            ]
            [
                test:request :get_ttl_resource_deep_con_no_im_req ;
                test:response_assertion :ok_res
            ]
        )
    ] .

